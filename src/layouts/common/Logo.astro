---
import SiteData from 'src/../data/site.json';
import LogoIcon from 'src/assets/icons/logo.svg';
import { cn } from 'utils/cn';
type Props = {
  class?: string;
};

const { class: className = '' } = Astro.props;

const { site_title } = (SiteData as any)[Astro.currentLocale ?? 'en'];
---

<LogoIcon
  title={site_title}
  class={cn(
    'h-28 w-80 text-black dark:text-white fill-black dark:fill-white',
    className
  )}
  mode="sprite"
/>
