---
import Icon from 'src/components/utility/icon.astro';
---

<a
  href=""
  role="marquee"
  aria-hidden="true"
  title="Got to top"
  class="top fixed bottom-16 right-5 z-[9999] mt-[calc(100vh+50px)] flex h-10 w-10 translate-y-12 items-center justify-center rounded-full bg-slate-900 p-3 text-white opacity-0 transition-all duration-300 hover:scale-110"
  ><Icon icon="ArrowUp" className="text-white" title="Got to top" /></a
>
<style>
  @keyframes adjust-scroll-button {
    to {
      opacity: 1;
      translate: 0;
    }
  }

  @supports (animation-timeline: scroll()) {
    .top {
      animation: adjust-scroll-button linear both;
    }
  }

  .top {
    animation-timeline: scroll();
    animation-range: 0 150px;
  }
</style>
