---
import PageHelper from '../shared/astro/page.astro';
import Layout, { type SEOProps } from './Layout.astro';

type Props = {
  frontmatter: {
    title: string;
    content_blocks?: any[];
    page_size?: number;
    seo?: SEOProps;
  };
  class?: string;
};

const { frontmatter, class: className } = Astro.props;
const { content_blocks = [] } = frontmatter;
---

<Layout {...frontmatter} class={className}>
  <slot />
  <PageHelper bookshop:live contentBlocks={content_blocks} />
</Layout>
