---
import type { LanguageCodes } from 'src/schemas/language';
import PostLayout from '../../layouts/Post.astro';
import { getCollection, render } from 'astro:content';
import slugify from 'slugify';
import { trailingSlash } from 'utils/permalinks';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts
    .filter((p) => (p.data.language ?? 'en') === 'en')
    .map((post) => ({
      params: {
        slug:
          slugify(post.data.slug ?? post.data.title, {
            lower: true,
            strict: true,
            trim: true
          }) + trailingSlash
      },
      props: { post }
    }));
}

if (!Astro.params.slug) {
  throw new Error('Post slug is undefined');
}
const { post } = Astro.props;
if (!post) {
  throw new Error('Failed to get post with slug: ' + Astro.params.slug);
}
const { Content } = await render(post);
const language = Astro.currentLocale as LanguageCodes;
---

<PostLayout {...post.data} body={post.body} language={language}>
  <Content />
</PostLayout>
