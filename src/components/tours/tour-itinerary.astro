---
import Accordion from '../accordion/accordion.astro';
import AccordionItem from '../accordion/accordion-item.astro';
import Prose from '../typography/prose.astro';

type Props = {
  itinerary: {
    title: string;
    description?: string;
  }[];
};

const { itinerary = [] } = Astro.props;
---

<Accordion>
  {
    itinerary.map(({ title = '', description = '' }) => (
      <AccordionItem title={title}>
        <Prose markdown={description} />
      </AccordionItem>
    ))
  }
</Accordion>
