---
import { stack, type StackProps } from './stack.style';
import { clsx } from 'clsx';

interface Props extends StackProps {}

const {
  class: className,
  layout = 'horizontal',
  spacing = 'xlarge',
  alignment = 'leading',
  distribution = 'leading',
  as = 'div',
  reverse
} = Astro.props;

const Component = as;
const style = clsx(
  stack({
    layout,
    spacing,
    alignment,
    distribution,
    reverse
  }),
  className
);
---

<Component class={style}>
  <slot />
</Component>
