---
import { tv, type VariantProps } from 'tailwind-variants';
import { cn } from 'utils/cn';

const separatorStyles = tv({
  base: 'w-full border-solid',
  variants: {
    size: {
      none: '',
      small: 'my-4',
      medium: 'my-6',
      large: 'my-10'
    },
    weight: {
      none: '',
      thin: 'border-t-2',
      normal: 'border-t-4',
      heavy: 'border-t-8'
    },
    color: {
      primary: 'border-primary',
      secondary: 'border-secondary',
      accent: 'border-accent',
      neutral: 'border-neutral',
      info: 'border-info',
      muted: 'border-muted',
      success: 'border-success',
      danger: 'border-danger',
      warning: 'border-warning'
    }
  },
  defaultVariants: {
    size: 'small',
    weight: 'normal',
    color: 'primary'
  }
});

type Props = {
  class?: string;
} & VariantProps<typeof separatorStyles>;

const {
  size = 'small',
  weight = 'normal',
  class: className,
  color = 'primary'
} = Astro.props;

const style = cn(separatorStyles({ size, color, weight }), className);
---

<hr class={style} />
