---
import { footer } from '../../../data/navigation.json';
import Icon from '../utility/icon';
---

<footer
  style={`background-color: ${footer.background_color}; color: ${footer?.color};`}
>
  <div class="px-8">
    <div
      class="footer grid grid-cols-1 items-center justify-between gap-8 py-[48px] sm:grid-cols-3"
    >
      <a
        class="flex items-center justify-center sm:justify-start"
        href={footer.logo_url}
      >
        <img
          class="footer__logo-image"
          src={footer.logo}
          alt="Body of the Year Logo"
        />
      </a>
      <ul class="flex items-center justify-center gap-4">
        {
          footer.social.map((link) => {
            return (
              <li class="w-[2rem]">
                <a href={link.link}>
                  <Icon icon={link.social_icon} />
                </a>
              </li>
            );
          })
        }
      </ul>

      <ul class="flex flex-col gap-4 text-center sm:text-end">
        {
          footer.links.map((link) => {
            return (
              <li>
                <a href={link.link}>{link.text}</a>
              </li>
            );
          })
        }
      </ul>
    </div>

    <p class="py-8 text-center">
      &#169; {new Date().getFullYear()}
      {footer.copyright}
    </p>
  </div>
</footer>

<style>
  .footer {
    max-width: var(--pageContainer);
    margin: 0 auto;
  }
  .footer__logo-image {
    display: block;
    max-width: min(200px, 80%);
  }
</style>
